# Application Configuration
APP_NAME=Jira Clone
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost/jira_clone_system/public

# Database Configuration
DB_HOST=localhost
DB_PORT=3306
DB_NAME=jira_clone
DB_USER=root
DB_PASSWORD=

